{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"]
    },
    "jsx": "react-native",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["expo", "react-native",], // Add Expo and React Native types
    "allowSyntheticDefaultImports": true, // Allows default imports
    "forceConsistentCasingInFileNames": true // Enforce case-sensitive imports
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/utils/types.ts",
    "index.ts",
    "app/index.tsx"
, "app/_layout.tsx"  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "expo-shared"
  ]
}
